<% location = "/gwcircular/#{@item.id}/file_exports/export_file" %>

<div class="notice"><%= flash.now[:notice] %> </div>

<h3><%= t('rumi.gwcircular.file_export.export') %></h3>
<div class="output_csv_note">
  <%= t('rumi.gwcircular.file_export.description1') %>
  <br />
  <%= raw(detail(t('rumi.gwcircular.file_export.description2'))) %>
</div>
<%= form_tag location, {method: :get , multipart: true} do %>
  <%= hidden_field_tag('item[csv]','put') %>
  <table class="defaultTable bbs_attachlistTable">
    <tr>
    <th><%= t('rumi.gwcircular.th.charcode') %></th>
    <td>
      <%= radio_button_tag('item[nkf]', 'sjis',true  ) %><label for="item_nkf_sjis">SJIS</label>
      <%= radio_button_tag('item[nkf]', 'utf8',false ) %><label for="item_nkf_utf8">UTF8</label>
    </td>
    </tr>
  </table>
  <div class="submitters"><%= submit_tag t('rumi.gwcircular.file_export.export') %></div>
<% end %>
